
# wm independent hotkeys
#

# terminal emulator
super + Return
      termite
# GNOME System Monitor
ctrl + shift + Escape
	gnome-system-monitor

ctrl + alt + Escape
    bash ~/.config/rofi/menu/CONFIG

# program launcher
super + space
    rofi -combi-modi run,drun -show combi -modi combi

# rofi -show run -lines 10 -padding 300 -opacity "100" -font "Roboto Mono 15" -width 1368 -separator-style "none" -hide-scrollbar -color-window "argb:dd000000, argb:0002b36, argb:7bffffff" -color-normal "argb:0ffffff, #ffffff, argb:0eee8d5, #ffffff, #000000" -color-active "argb:0fdf6e3, #268bd2, argb:0eee8d5, #268bd2, #fdf6e3" -color-urgent "argb:0fdf6e3, #dc322f, argb:0eee8d5, #dc322f, #fdf6e3"	

super + shift + space
      bash ~/.config/rofi/menu/SEARCH

super + Tab
	rofi -show window -show-icons

# Change Wallpaper #

super + x
	feh --randomize --bg-fill ~/Dropbox/wallpapers

# Lock screen

super + shift + x
    i3lock -c000000

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; \
	notify-send "sxhkd config reloaded"

# Common programs

super + q
	firefox

super + p
    sh /home/svartfax/.shell/uidpaste

super + shift + p
    sh /home/svartfax/.shell/uidnamepaste
	
super + y
    nautilus

super + v
	termite -e vim

super + z 
	urxvt -e /usr/bin/zsh

super + u
    emacsclient -c 

super + shift + u
    emacs --daemon

##########################
#System
##########################

# Show Battery
super + alt + b
    notify-send "$(acpi)"

# Raises volume
XF86AudioRaiseVolume
    amixer set Master 2%+

# Lowers volume
XF86AudioLowerVolume
    amixer set Master 2%-

# Mutes
XF86AudioMute
#amixer set Master toggle
    amixer -D pulse set Master 1+ toggle

# Brightness goes up
super + alt + k
	brightness + 

# Brightness goes down
super + alt + j
    brightness -

# Control spotify
super + alt + p
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

super + alt + o
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

super + alt + i
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

#
# bspwm hotkeys
#

# quit bspwm normally
super + shift + Escape
	bspc quit
#    bash ~/.config/rofi/menu/SYSTEM

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# Rotate Desktop

super + r
	bspc node @/ -R 90

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + shift + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
#super + {grave,Tab}
#	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {i,o}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus the next/previous node in the same window
super + {comma,period}
    bspc node -f {next,prev}.local

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

super + alt + {Up, Down} 
	bspc config window_gap $(( $(bspc config window_gap) {+,-} 2 ))

super + ctrl + {Left,Right,Up,Down}
    bspc node @focused:/ --rotate {270,90,180,180}

# Toggle gaps on and off

super + b
	bspc config -d focused window_gap 37

super + n
	bspc config -d focused window_gap 0

# Screenshots
Print
	gnome-screenshot; \
	notify-send "Screenshot saved"

ctrl + Print
	gnome-screenshot -c; \
	notify-send "Screenshot copied to clipboard"

shift + Print
	gnome-screenshot -a; \
	notify-send "Screenshot saved"

ctrl + shift + Print
	gnome-screenshot -ac; \
	notify-send "Screenshot copied to clipboard"
