{
  "title": "Change caps_lock to control when held, escape when tapped",
  "rules": [
    {
      "description": "Caps Lock -> Control when held, Escape when tapped",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}

